<main>
    <div class="container">
        <div class="row my-4">
            <div class="col-sm-12 col-md-6 offset-md-3 border-1">
                <div class="register-title">
                    <h3>Login</h3>
                </div>
                <label for="email">Enter Email</label>
                {{input id="email" class='form-input mb-4' type='email' placeholder='Email' value=email}}
                <label for="password">Password</label>
                {{input id="password" class='form-input mb-4' type='password' placeholder='Password' value=password}}
                <div class="form-group">
                    <div class="checkbox">
                    <label>
                        <input type="checkbox" class="mr-2" name="remember" value="remember_me">Remember me
                    </label>
                    </div>
                </div>
                <button class="form-button button-purple" {{action "register"}}>Login</button>
                <p class="text-center">{{#link-to 'login'}}Forgot password?{{/link-to}}</p>
            </div>
        </div>
    </div>
</main>