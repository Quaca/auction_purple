<main class="mt-5 mb-8">
    <div class="container">
        <div class="row my-4">
            <div class="col-sm-12 col-md-6 offset-md-3 border-1">
                <div class="register-title">
                    <h3>New password</h3>
                </div>
                <p class="forgot-password-text">Enter below your new password</p>
                <label for="pasword">Enter password</label>
                {{input id="password" class='form-input mb-4' type='password' value=password}}
                <button class="form-button button-purple" {{action "changePassword"}}>Submit</button>
                <p class="text-center">{{#link-to 'login'}}{{fa-icon 'arrow-circle-left'}} Back to login{{/link-to}}</p>
            </div>
        </div>
    </div>
</main>